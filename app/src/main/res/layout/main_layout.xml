<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/timeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:41"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/segmentedControl"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_launcher_background"
        android:orientation="horizontal"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/timeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="32dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Lista"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="∞"
            android:textColor="@android:color/black"
            android:layout_height="match_parent"
            android:background="@drawable/ic_launcher_background" />
    </LinearLayout>

    <TextView
        android:id="@+id/turnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estás a 7 Turnos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/segmentedControl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/TurnifyLogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintTop_toBottomOf="@id/turnInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/turnoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turno: 148"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/TurnifyLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTurnify"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/turnoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/logoTurnify"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/turnCountTurnify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 Turnos"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/turnNumTurnify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="148"
                android:layout_below="@id/turnCountTurnify" />

            <TextView
                android:id="@+id/labelTurnify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnify\nRestaurante"
                android:layout_below="@id/turnNumTurnify"
                android:maxLines="2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCruzRoja"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/turnoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/logoCruzRoja"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/turnCountCruzRoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 Turnos"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/turnNumCruzRoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="148"
                android:layout_below="@id/turnCountCruzRoja" />

            <TextView
                android:id="@+id/labelCruzRoja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnify\nRestaurante"
                android:layout_below="@id/turnNumCruzRoja"
                android:maxLines="2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMcDonalds"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="204dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/turnoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/logoMcDonalds"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/turnCountMcDonalds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Turnos"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/turnNumMcDonalds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="148"
                android:layout_below="@id/turnCountMcDonalds" />

            <TextView
                android:id="@+id/labelMcDonalds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnify\nRestaurante"
                android:layout_below="@id/turnNumMcDonalds"
                android:maxLines="2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSura"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="298dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/turnoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ImageView
                android:id="@+id/logoSura"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/turnCountSura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24 Turnos"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/turnNumSura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="148"
                android:layout_below="@id/turnCountSura" />

            <TextView
                android:id="@+id/labelSura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turnify\nRestaurante"
                android:layout_below="@id/turnNumSura"
                android:maxLines="2" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
